<UserControl x:Class="Do_An.GiangVien.UC_GiangVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="850">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lịch dạy -->
        <GroupBox Header="Lịch dạy" Grid.Row="0" Margin="0,0,0,10">
            <DataGrid x:Name="dgLichDay" AutoGenerateColumns="True" Height="150" />
        </GroupBox>

        <!-- Danh sách học viên -->
        <GroupBox Header="Danh sách học viên" Grid.Row="1">
            <StackPanel>
                <DataGrid x:Name="dgHocVien" AutoGenerateColumns="True" Height="250"/>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Mã HV:"/>
                    <TextBox x:Name="txtMaHV" Width="80" Margin="5,0"/>
                    <Label Content="Điểm GK:"/>
                    <TextBox x:Name="txtDiemGK" Width="50" Margin="5,0"/>
                    <Label Content="Điểm CK:"/>
                    <TextBox x:Name="txtDiemCK" Width="50" Margin="5,0"/>
                    <Button Content="Cập nhật" Width="100" Margin="10,0" Click="BtnCapNhat_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
