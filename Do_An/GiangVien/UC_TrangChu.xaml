<UserControl x:Class="Do_An.GiangVien.UC_TrangChu" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#e8e8e8"
                BorderThickness="1"
                Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="#000" BlurRadius="8" ShadowDepth="2" Opacity="0.08"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">

                <Viewbox Stretch="Uniform" StretchDirection="Both" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Width="900" Height="650" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ảnh đại diện giáo viên -->
                        <Image x:Name="picGiaoVien"
                               Source="pack://application:,,,/imagee/avatar.png" 
                               Stretch="UniformToFill"
                               Margin="10"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Height="280"
                               Width="280"
                               Grid.Column="0"/>

                        <!-- Thông tin giáo viên -->
                        <StackPanel Grid.Column="1" Margin="30,10,30,10" VerticalAlignment="Top">
                            <TextBlock Text="THÔNG TIN GIẢNG VIÊN"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#2E3A69"
                                       TextAlignment="Left"
                                       Margin="0,6,0,18"/>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Mã giáo viên" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtMaGV" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Họ và tên" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtHoTenGV" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Chuyên môn" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtChuyenMon" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Email" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtEmailGV" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="CCCD" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtCCCD" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Viewbox>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
