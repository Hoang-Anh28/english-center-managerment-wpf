<UserControl x:Class="Do_An.HocPhi" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#f5f5f5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <!-- Khung bo góc trắng -->
        <Border Background="White" CornerRadius="12" Padding="20" BorderBrush="#e8e8e8" BorderThickness="1" Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="#000" BlurRadius="8" ShadowDepth="2" Opacity="0.08"/>
            </Border.Effect>
            <!-- Cho phép cuộn nếu nội dung vượt kích thước -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <!-- Không dùng Viewbox (vì làm co giãn toàn bộ, gây che DataGrid) -->
                <Grid Background="Transparent" MinWidth="1000" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- tiêu đề -->
                        <RowDefinition Height="Auto"/>
                        <!-- thông báo -->
                        <RowDefinition Height="Auto"/>
                        <!-- QR + thông tin -->
                        <RowDefinition Height="Auto"/>
                        <!-- địa chỉ -->
                        <RowDefinition Height="*"/>
                        <!-- lịch sử học phí -->
                    </Grid.RowDefinitions>
                    <!-- Tiêu đề -->
                    <TextBlock Text="THÔNG TIN HỌC PHÍ" FontSize="28" FontWeight="Bold" Foreground="DarkOrange" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>
                    <!-- Thông báo -->
                    <TextBox Grid.Row="1" Text="Thông báo: Học viên đóng học phí cho khóa học tiếp theo từ ngày DD/MM/YYYY đến hết ngày DD/MM/YYYY. Học viên có thể đóng trực tiếp tại trung tâm hoặc qua tài khoản ngân hàng." TextWrapping="Wrap" Background="#FFF8E1" Foreground="Red" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" BorderThickness="0" IsReadOnly="True"/>
                    <!-- QR + Thông tin tài khoản -->
                    <Grid Grid.Row="2" Margin="0,10,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Do_An;component/imagee/qr.jpg" Width="217" Height="200" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Margin="40,0,10,0" VerticalAlignment="Center">
                            <TextBlock Text="Tên tài khoản: Trung tâm ngoại ngữ StarEnglish" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="Số tài khoản: 012 345 6789 tại Nam Á Bank - Chi nhánh TP.HCM" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="Nội dung chuyển khoản: [Họ tên học viên][Mã học viên]" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                    <!-- Địa chỉ -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="ĐỊA CHỈ TRUNG TÂM" FontSize="20" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,10"/>
                        <DockPanel>
                            <Image Source="/Do_An;component/imagee/map.jpg" Width="275" Height="130" Stretch="Uniform" Margin="0,0,20,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CN1: 123, đường XVNT, F21, quận Bình Thạnh, TP.HCM" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="CN2: 123, đường Lê Văn Việt, F.Long Thạnh Mỹ, TP.Thủ Đức, TP.HCM" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="CN3: 123, đường Trường Chinh, F.Tây Thạnh, Q.Tân Phú, TP.HCM" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                    <!-- Lịch sử học phí -->
                    <StackPanel Grid.Row="4" Margin="0,10,0,0">
                        <TextBlock Text="LỊCH SỬ HỌC PHÍ ĐÃ ĐÓNG" FontSize="20" FontWeight="Bold" Foreground="DarkOrange" Margin="0,0,0,10"/>
                        <DataGrid x:Name="dgHocPhi"
          AutoGenerateColumns="True"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          Background="White"
          BorderBrush="#CCCCCC"
          BorderThickness="1"
          Margin="0,0,0,10"
          MinHeight="250"
          MaxHeight="400"
          VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Auto"
          ColumnWidth="*"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Top"
          FontSize="16"
          RowHeight="32"
          AlternatingRowBackground="#FFF9F9F9"
          GridLinesVisibility="All">
                            <DataGrid.Resources>
                                <!-- Canh giữa tiêu đề cột -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>

                                <!-- Canh giữa dữ liệu và thêm padding -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                </Style>
                            </DataGrid.Resources>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>