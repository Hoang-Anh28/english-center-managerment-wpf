<UserControl x:Class="Do_An.HoSoHocVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#e8e8e8"
                BorderThickness="1"
                Margin="10,10,10,10">
            <!-- căn giống MainContent margin trong GiaoDien_HocVien -->
            <Border.Effect>
                <DropShadowEffect Color="#000" BlurRadius="8" ShadowDepth="2" Opacity="0.08"/>
            </Border.Effect>

            <!-- ScrollViewer CHUNG cho toàn bộ vùng nội dung -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">

                <!-- Viewbox giúp toàn bộ nội dung scale khi thay đổi kích thước -->
                <!-- Không gán Width/Height cho Viewbox để nó co giãn theo vùng chứa -->
                <Viewbox Stretch="Uniform" StretchDirection="Both" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!-- Kích thước "gốc" của bố cục (tỉ lệ để Viewbox scale) -->
                    <Grid Width="1100" Height="650" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ảnh học viên -->
                        <Image x:Name="picHocVien"
                               Source="pack://application:,,,/imagee/avatar.png"
                               Stretch="UniformToFill"
                               Margin="10"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Height="280"
                               Width="280"
                               Grid.Column="0"/>

                        <!-- Thông tin học viên (KHÔNG dùng ScrollViewer bên trong) -->
                        <StackPanel Grid.Column="1" Margin="30,10,30,10" VerticalAlignment="Top">
                            <TextBlock Text="HỒ SƠ HỌC VIÊN"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="DarkOrange"
                                       TextAlignment="Left"
                                       Margin="0,6,0,18"/>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Mã học viên" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtMaHV" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Họ và tên" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtHoTen" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Ngày sinh" FontWeight="Bold" FontSize="14"/>
                                <DatePicker x:Name="dtNgaySinh" IsEnabled="False" Height="32" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Giới tính" FontWeight="Bold" FontSize="14"/>
                                <ComboBox x:Name="cbGioiTinh" IsEnabled="False" Height="32" Margin="0,6,0,0">
                                    <ComboBoxItem Content="Nam"/>
                                    <ComboBoxItem Content="Nữ"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Số điện thoại" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtSDT" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Email" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtEmail" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Địa chỉ" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtDiaChi" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Lớp đang theo học" FontWeight="Bold" FontSize="14"/>
                                <TextBox x:Name="txtLop" IsReadOnly="True" Height="32" TextAlignment="Left" Margin="0,6,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Thông tin phụ huynh -->
                        <StackPanel Grid.Column="2" Margin="20,30,20,10" VerticalAlignment="Top">
                            <TextBlock Text="THÔNG TIN PHỤ HUYNH" FontSize="20" FontWeight="Bold" Margin="0,0,0,14"/>
                            <TextBlock Text="Tên phụ huynh" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="txtTenPH" IsReadOnly="True" Height="32" Margin="0,6,0,10"/>
                            <TextBlock Text="SĐT phụ huynh" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="txtSDTPH" IsReadOnly="True" Height="32" Margin="0,6,0,10"/>
                        </StackPanel>
                    </Grid>
                </Viewbox>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
