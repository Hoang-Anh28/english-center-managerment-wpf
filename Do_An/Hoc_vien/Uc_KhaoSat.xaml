<UserControl x:Class="Do_An.KhaoSat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Padding="30"
                BorderBrush="#e8e8e8"
                BorderThickness="1"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="#000"
                                  BlurRadius="8"
                                  ShadowDepth="2"
                                  Opacity="0.08"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">

                <Viewbox Stretch="Uniform"
                         StretchDirection="Both"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">

                    <!-- Form chính -->
                    <Grid Width="900" Height="800" Background="Transparent">
                        <StackPanel Margin="60,40,60,40">

                            <!-- Tiêu đề -->
                            <TextBlock Text="KHẢO SÁT HỌC VIÊN"
                                       FontSize="38"
                                       FontWeight="Bold"
                                       Foreground="DarkOrange"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,40"/>

                            <!-- Họ tên -->
                            <StackPanel Margin="0,20,0,20">
                                <TextBlock Text="Họ và tên"
                                           FontWeight="Bold"
                                           FontSize="22"/>
                                <TextBox x:Name="txtHoTen"
                                         Height="50"
                                         FontSize="18"
                                         Margin="0,10,0,0"
                                         Padding="12,6"
                                         ToolTip="Nhập họ và tên của bạn"/>
                            </StackPanel>

                            <!-- Giới tính -->
                            <StackPanel Margin="0,20,0,20">
                                <TextBlock Text="Giới tính"
                                           FontWeight="Bold"
                                           FontSize="22"/>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,10,0,0">
                                    <RadioButton x:Name="rdoNam"
                                                 Content="Nam"
FontSize="18"
                                                 Margin="0,0,40,0"/>
                                    <RadioButton x:Name="rdoNu"
                                                 Content="Nữ"
                                                 FontSize="18"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Lớp -->
                            <StackPanel Margin="0,20,0,20">
                                <TextBlock Text="Lớp"
                                           FontWeight="Bold"
                                           FontSize="22"/>
                                <TextBox x:Name="txtLop"
                                         Height="50"
                                         FontSize="18"
                                         Margin="0,10,0,0"
                                         Padding="12,6"
                                         ToolTip="Nhập tên lớp của bạn"/>
                            </StackPanel>

                            <!-- Cảm nhận -->
                            <StackPanel Margin="0,20,0,30">
                                <TextBlock Text="Cảm nhận của bạn về việc học hiện tại"
                                           FontWeight="Bold"
                                           FontSize="22"/>
                                <TextBox x:Name="txtCamNhan"
                                         Height="120"
                                         FontSize="18"
                                         Margin="0,10,0,0"
                                         Padding="12"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         ToolTip="Nhập cảm nhận của bạn..."/>
                            </StackPanel>

                            <!-- Nút gửi -->
                            <Button Content="Gửi khảo sát"
                                    Click="BtnGui_Click"
                                    Width="240"
                                    Height="60"
                                    HorizontalAlignment="Center"
                                    Background="#FF9800"
                                    Foreground="White"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Viewbox>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>