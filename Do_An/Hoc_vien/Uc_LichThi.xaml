<UserControl x:Class="Do_An.LichThi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Do_An"
             mc:Ignorable="d"
             Background="#f5f5f5"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#e8e8e8"
                BorderThickness="1"
                Margin="10,10,10,10">
            <Border.Effect>
                <DropShadowEffect Color="#000" BlurRadius="8" ShadowDepth="2" Opacity="0.08"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">

                <Viewbox Stretch="Uniform" StretchDirection="Both" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Grid Width="950" Height="600" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="LỊCH THI"
                                   FontSize="38"
                                   FontWeight="Bold"
                                   Foreground="DarkOrange"
                                   TextAlignment="Left"
                                   Margin="0,0,0,27"
                                   HorizontalAlignment="Left" Width="164"/>

                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Mã học viên:" FontWeight="Bold" FontSize="14" Width="100"/>
                                    <TextBox x:Name="txtMaHV" IsReadOnly="True" Height="32" TextAlignment="Left" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Họ tên:" FontWeight="Bold" FontSize="14" Width="100"/>
                                    <TextBox x:Name="txtHoTen" IsReadOnly="True" Height="32" TextAlignment="Left" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Lớp:" FontWeight="Bold" FontSize="14" Width="100"/>
                                    <TextBox x:Name="txtLop" IsReadOnly="True" Height="32" TextAlignment="Left" Width="150"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"/>

                            <Button x:Name="btnXemLichThi"
                                    Grid.Column="2"
                                    Content="Xem lịch thi"
                                    Width="160" Height="42"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="#3498DB"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontSize="16"
                                    Click="btnXemLichThi_Click" Margin="0,78,0,0"/>
                        </Grid>
                        <DataGrid x:Name="dgLichThi"
                                  Grid.Row="2"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#F8F9FA">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="50"/>
                                <DataGridTextColumn Header="Môn thi" Binding="{Binding MonThi}" Width="*"/>
                                <DataGridTextColumn Header="Ngày thi" Binding="{Binding NgayThi}" Width="120"/>
                                <DataGridTextColumn Header="Giờ thi" Binding="{Binding GioThi}" Width="120"/>
                                <DataGridTextColumn Header="Phòng thi" Binding="{Binding PhongThi}" Width="100"/>
                                <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Viewbox>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>