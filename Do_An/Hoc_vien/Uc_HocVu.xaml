<UserControl x:Class="Do_An.HocVu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Do_An"
             mc:Ignorable="d"
             Background="#f5f5f5"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Margin="0">

        <!-- CARD chứa nội dung -->
        <Border Background="White"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#e8e8e8"
                BorderThickness="1"
                Margin="10">

            <!-- Hiệu ứng shadow giống file trên -->
            <Border.Effect>
                <DropShadowEffect Color="#000"
                                  BlurRadius="8"
                                  ShadowDepth="2"
                                  Opacity="0.08"/>
            </Border.Effect>

            <!-- Scroll chung -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">

                <!-- Viewbox scale mọi thứ -->
                <Viewbox Stretch="Uniform" StretchDirection="Both"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">

                    <!-- KÍCH THƯỚC GỐC (base layout) -->
                    <Grid Width="1100" Height="650" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Thanh chức năng -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Grid.Row="0">

                            <Button x:Name="btnThoiKhoaBieu" 
                                    Content="Thời khóa biểu"
                                    Width="240" Height="136"
                                    Margin="10"
                                    Background="#80FFFF"
                                    FontFamily="Times New Roman"
                                    FontWeight="Bold"
                                    FontSize="16"
                                    Click="btnThoiKhoaBieu_Click"/>

                            <Button x:Name="btnXemDiem"
                                    Content="Xem điểm"
                                    Width="240" Height="136"
                                    Margin="10"
                                    Background="#FFC080"
                                    FontFamily="Times New Roman"
                                    FontWeight="Bold"
                                    FontSize="16"
                                    Click="btnXemDiem_Click"/>

                            <Button x:Name="btnLichThi"
                                    Content="Lịch thi"
                                    Width="240" Height="136"
                                    Margin="10"
                                    Background="#FFFF80"
                                    FontFamily="Times New Roman"
                                    FontWeight="Bold"
                                    FontSize="16"
                                    Click="btnLichThi_Click"/>
                        </StackPanel>

                        <!-- Panel load nội dung -->
                        <ContentControl x:Name="panHocVu"
                                        Grid.Row="1"
                                        Margin="10"/>
                    </Grid>
                </Viewbox>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
