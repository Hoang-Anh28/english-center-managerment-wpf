<Window x:Class="Do_An.AdminQLTK_AddTK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin tài khoản" 
        Height="400" Width="450" 
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style Nhãn (TextBlock) -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style cho ô nhập liệu (TextBox, PasswordBox, ComboBox) -->
        <Style TargetType="Control" x:Key="InputControl">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource InputControl}"/>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource InputControl}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource InputControl}"/>

        <!-- Style Nút bấm (Đồng bộ với GiaoDien_Admin) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0098B0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#008BA0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#5A626C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="THÔNG TIN TÀI KHOẢN" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="#1E3A8A" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Form nhập liệu (SỬ DỤNG GRID ĐỂ CĂN CHỈNH) -->
        <Grid Grid.Row="1" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tên đăng nhập -->
            <TextBlock Text="Tên đăng nhập:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,15,10"/>
            <TextBox x:Name="txtTenDN" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

            <!-- Họ tên -->
            <TextBlock Text="Họ tên:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,15,10"/>
            <TextBox x:Name="txtHoTen" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

            <!-- Mật khẩu -->
            <TextBlock Text="Mật khẩu:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,15,10"/>
            <PasswordBox x:Name="txtMatKhau" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

            <!-- Quyền (Loại người dùng) -->
            <TextBlock Text="Quyền:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}" Margin="0,10,15,10"/>
            <ComboBox x:Name="cboQuyen" Grid.Row="3" Grid.Column="1" Margin="0,5">
            </ComboBox>

        </Grid>

        <!-- Nút bấm (Giữ nguyên tên x:Name) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button x:Name="btnLuu" Content="💾 Lưu" Style="{StaticResource PrimaryButton}" Click="BtnLuu_Click"/>
            <Button x:Name="btnHuy" Content="❌ Hủy" Style="{StaticResource CancelButton}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
